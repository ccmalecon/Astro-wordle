---
import Layout from '../layouts/Layout.astro';
import GameBoard from '../components/GameBoard';
import ThemeToggle from '../components/ThemeToggle.astro';
import Footer from '../components/Footer.astro';
---

<Layout title="Astro Wordle">
  <main class="min-h-screen bg-sky-theme-light dark:bg-teal-gray-dark transition-colors duration-300 flex flex-col">
    <ThemeToggle />
    <div class="container mx-auto px-4 py-8 flex-grow">
      <h1 class="text-6xl font-bold tracking-wider text-center mb-8 text-sky-theme-dark dark:text-white uppercase font-jura">
        Wordle
      </h1>
      <GameBoard client:load />
    </div>
    <Footer />
  </main>
</Layout>